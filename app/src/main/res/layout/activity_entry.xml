<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity"
    android:background="#d8e5b8">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAllCaps="true"
        android:text="Image Input"
        android:id="@+id/textView6"
        android:elegantTextHeight="true"
        android:layout_gravity="center_horizontal"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please, confirm your result before proceeding."
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:contentDescription="@string/image1"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press to Process"
        android:textColor="@color/abc_primary_text_material_dark"
        android:background="@color/colorPrimary"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:onClick="onProcess"
        android:clickable="true"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:src="@android:drawable/ic_menu_camera"
        android:minHeight="50dp"
        android:minWidth="70dp"
        android:contentDescription="@string/imgbutton"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vehicle Number Plate :"
        android:id="@+id/textView8"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/editText5"
        android:hint="Plate Number"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_alignEnd="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, make sure there are spaces between District, Lot, Type and RegNumber"
        android:id="@+id/textView19"
        android:layout_below="@+id/editText5"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eg. BA 59 PA 5921"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textStyle="bold" />

</RelativeLayout>